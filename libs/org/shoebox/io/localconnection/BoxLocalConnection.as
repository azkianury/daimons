		:ByteArray;		protected var _oDUMP				:Object = {};		protected var _sCONNEXIONNAME		:String = 'DEFAULTCONNNAME';				// -------o constructor					public function BoxLocalConnection(sCONNNAME:String = null) : void {				if(sCONNNAME!==null)					_sCONNEXIONNAME = sCONNNAME; 									allowDomain('*');				client = this;				addEventListener(StatusEvent.STATUS , _onStatus);				super();			}		// -------o public						/**			* 			*			* @param 			* @return			*/			public function set connexionName(s:String) : void {				_sCONNEXIONNAME = s;			}						/**			* 			*			* @param 			* @return			*/			override public function connect(sCONNEXIONNAME:String) : void {								if(sCONNEXIONNAME!=='')					_sCONNEXIONNAME = sCONNEXIONNAME;							super.connect(sCONNEXIONNAME);			}				/**			 * 			 *			 * @param 			 * @return			 */			public function sendObject(o : * , sIDENT : String) : void {								if(o == null || sIDENT == null)						throw new ArgumentError(Errors.ARGUMENTSERROR);										var 	baDATAS : ByteArray = new ByteArray();					baDATAS.writeObject(o);					baDATAS.compress();					  					                   				var aPACKS : Array = [];			                                				var i : int = 0;				if (baDATAS.length > PACKAGESIZELIMITE) {											var 	baPACK : ByteArray;					var uNUMPACKS : uint = Math.ceil(baDATAS.length / PACKAGESIZELIMITE);					var uPOSITION : uint = 0;					var uSIZE : uint = baDATAS.length;					//trc('uNUMPACKS > ' + uNUMPACKS);                  			                                        					for (i = 0;i < uNUMPACKS; i++) {													baPACK = new ByteArray();						baPACK.writeBytes(baDATAS, uPOSITION, (uSIZE > PACKAGESIZELIMITE) ? PACKAGESIZELIMITE : uSIZE);			                        						aPACKS.push({ttl:uNUMPACKS, pos:(i + 1), data:baPACK , name:sIDENT});			                        						uPOSITION += (uSIZE > PACKAGESIZELIMITE) ? PACKAGESIZELIMITE : uSIZE;						uSIZE -= (uSIZE > PACKAGESIZELIMITE) ? PACKAGESIZELIMITE : uSIZE;					}  				} else 						aPACKS.push({ttl:1, pos:1, data:baDATAS , name:sIDENT});									for (i = 0;i < aPACKS.length; i++) {					send(_sCONNEXIONNAME, 'onDatas', aPACKS[i]);									}			}			/**			* 			*			* @param 			* @return			*/			public function onDatas(o:Object) : void {								if(o.pos == 1)					_oBUFFER = new ByteArray();					_oBUFFER.writeBytes(o.data,0,o.data.bytesAvailable);																			if(o.pos == o.ttl){					_oBUFFER.uncompress();					dispatchEvent(new BoxLocalConnectionEvents(BoxLocalConnectionEvents.ONDATAS,false,true,o.name,_oBUFFER.readObject()));					_oBUFFER.clear();						}							}					// -------o protected						/**			* 			*			* @param 			* @return			*/			protected function _datasObject(uPosition:uint , uLength:uint , datas:ByteArray , sNAME:String) : Object {				return {position:uPosition,length:uLength , datas:datas, name:sNAME, id:getTimer()};			}						/**			* 			*			* @param 			* @return			*/			protected function _onStatus(e:StatusEvent) : void {				//trc('onStatus :::'+e);			}						// -------o misc			public static function trc(arguments:*) : void {				Logger.log(BoxLocalConnection,arguments);			}	}}