ic						/**			* 			*			* @param 			* @return			*/			public function set name(s:String) : void {				_sNAME = s;			}						/**			* 			*			* @param 			* @return			*/			public function get name() : String {				return _sNAME;			}						/**			* 			*			* @param 			* @return			*/			public function set required(b:Boolean) : void {				_bREQUIRED = b;			}						/**			* 			*			* @param 			* @return			*/			public function get required() : Boolean {				return _bREQUIRED;			}						/**			* 			*			* @param 			* @return			*/			public function set formules(f:*) : void {								if(f is Function)					_aFORMULES = [f];				else if(f is Array)					_aFORMULES = f as Array;				else					throw new ArgumentError(Errors.ARGUMENTSERROR);			}					// -------o protected					// -------o misc			public static function trc(arguments:*) : void {				Logger.log(AField,arguments);			}	}}