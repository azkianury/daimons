t.TextFormat;	/**	 * org.shoebox.display.items.GenericButton	* @author shoebox	*/	public class GenericButton extends Sprite implements IStageable{				protected var _btnBACK		: SimpleButton = new SimpleButton();		protected var _sTEXT		: String;		protected var _oFIELD		: TextField;				// -------o constructor					public function GenericButton() : void {				trc('constructor');			}		// -------o public						/**			* onStaged function			* @public			* @param 			* @return			*/			public function onStaged( e : Event = null ) : void {				_draw();			}						/**			* onRemoved function			* @public			* @param 			* @return			*/			public function onRemoved( e : Event = null) : void {						}						/**			* set text function			* @public			* @param 			* @return			*/			public function set text( s : String ) : void {				_sTEXT = s;			}						/**			* get height function			* @public			* @param 			* @return			*/			override public function get height() : Number {				return _btnBACK.height;			}		// -------o protected						/**			* 			*			* @param 			* @return			*/			protected function _draw() : void {				trc('draw');				addChild(_btnBACK);											//					var oFIELD : TextField = Factory.build(TextField , {	htmlText : _sTEXT , 														autoSize : TextFieldAutoSize.LEFT , 														multiline : true ,														wordWrap : true , 														selectable : false,														mouseEnabled : false ,														antiAliasType : AntiAliasType.ADVANCED ,														gridFitType : GridFitType.PIXEL ,														defaultTextFormat : new TextFormat('Verdana' , 12 , 0xFFFFFF , true ,null , null , null ,null ,null , 10 , 10)														});					addChild( oFIELD );															//					_btnBACK.downState = _btnBACK.overState = _drawState(0x696969 , oFIELD.width , oFIELD.height);					_btnBACK.hitTestState = _btnBACK.upState 	 = _drawState(0x08A6F3 , oFIELD.width , oFIELD.height);					_btnBACK.useHandCursor = true;					}						/**			* 			*			* @param 			* @return			*/			protected function _drawState( uCOL : uint , uWIDTH : uint , uHEIGHT : uint) : Shape {								var 	oSP:Shape = new Shape();					oSP.graphics.beginFill(uCOL);					oSP.graphics.drawRect( 0 , 0 , uWIDTH , uHEIGHT);					oSP.graphics.endFill();									return oSP;							}						/**			* 			*			* @param 			* @return			*/			protected function _onMouseEvent(e:MouseEvent) : void {				trc('onMousEvent ::: '+e);			}					// -------o misc			public static function trc(arguments:*) : void {				Logger.log(GenericButton,arguments);			}	}}