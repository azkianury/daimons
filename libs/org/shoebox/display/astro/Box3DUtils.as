package org.shoebox.display.astro {	import org.shoebox.errors.Errors;	import org.shoebox.utils.logger.Logger;	import flash.display.DisplayObject;	import flash.display.DisplayObjectContainer;	/**	 *	* org.shoebox.display.Box3DUtils	* @date:3 sept. 09	* @author shoe[box]	*/	public class Box3DUtils{		// -------o constructor			/**			* contructor			* @return void			*/			public function Box3DUtils():void{				Errors.throwError(new Error(Errors.STATICCLASSERROR));			}		// -------o public						/**			* 			*			* @param 			* @return			*/			static public function zsortChildren(tgt : DisplayObjectContainer) : void {								//					var aCHILDS:Array = [];					var iLEN:uint = tgt.numChildren;					var i:uint = 0;					for(i ; i<iLEN ; i++){						aCHILDS.push(new ZSortItem(tgt.getChildAt(i) as DisplayObject));					}											aCHILDS.sortOn('z', Array.NUMERIC | Array.DESCENDING);								//					i = 0;					var o:ZSortItem;					for each(o in aCHILDS){						tgt.setChildIndex(o.target,i);						i++;											}									//					aCHILDS = null;			}					// -------o private		// -------o misc			public static function trc(arguments:*) : void {				Logger.log(Box3DUtils,arguments);			}	}}import org.shoebox.utils.logger.Logger;import flash.display.DisplayObject;/** *	* org.shoebox.display.ZSortItem	* @date:2 sept. 09	* @author shoe[box]	*/	class ZSortItem{				protected var __target		:DisplayObject;				// -------o constructor			/**			* contructor			* @return void			*/			public function ZSortItem(tgt:DisplayObject):void{				__target = tgt;			}					// -------o public						/**			* 			* @param			* @return			*/			public function get target():DisplayObject{				return __target;			}						/**			* 			* @param			* @return			*/			public function get z():Number{				return target.transform.getRelativeMatrix3D(target.parent).position.z;			}					// -------o private		// -------o misc			public static function trc(arguments:*) : void {				Logger.log(ZSortItem,arguments);			}	}	