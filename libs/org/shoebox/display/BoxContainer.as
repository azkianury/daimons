h.text.TextField;	import flash.text.TextFieldAutoSize;	import flash.text.TextFormat;		/**	* org.shoebox.display.BoxContainer	* @author shoebox	*/	public class BoxContainer extends MovieClip {				// -------o constructor					public function BoxContainer() : void {				Errors.throwError(new Error(Errors.STATICCLASSERROR));			}		// -------o public						/**			* 			*			* @param 			* @return			*/			static public function popup(container:DisplayObjectContainer , sTitle:String , sText:String) : void {								sText = BoxString.linksToHrefs( sText );								var w:Number = container.stage.stageWidth * .8;				var 	g:Graphics;								//					var 	mcHEAD:Sprite = new Sprite();					var 	gCROSS:Sprite = new Sprite();					var 	mcBACK:Sprite = new Sprite();					var 	mcBLCK:Sprite = new Sprite();									//						g = mcHEAD.graphics;						g.beginFill(0x07A6F3,1);						g.drawRect(0,0,w,25);												g = gCROSS.graphics;						g.beginFill(0xFFFFFF,1);						g.drawRect(0,0,15,15);												g = mcBACK.graphics;						g.beginFill(0x2A2A2A,.8);						g.lineStyle(2,0x07A6F3,1);						g.drawRect(0,0,w,200);												g = mcBLCK.graphics;						g.beginFill(0,.9);						if(container is Stage)							g.drawRect(0,0,(container as Stage).stageWidth,(container as Stage).stageHeight);						else							g.drawRect(0,0,container.stage.stageWidth,container.stage.stageHeight);												//														BoxObject.accessorInit(	gCROSS, {x:w-20 , y : 5 , buttonMode : true}); // x:w - 20 , 					gCROSS.addEventListener(MouseEvent.CLICK , _close ,false , 10 , true);								//					var 	tfTITLE:TextField = new TextField();					BoxObject.accessorInit(tfTITLE,{x:10,y:5,width:w-20,text:sTitle,selectable:false, multiline:true, wordWrap : true});					tfTITLE.setTextFormat(new TextFormat('Verdana',12,0xFFFFFF,true));								//					var 	tfTEXT:TextField = new TextField();					BoxObject.accessorInit(tfTEXT, {x:10, y:30, width:w - 20, htmlText:sText, multiline:true, wordWrap : true, autoSize : TextFieldAutoSize.LEFT ,border : true , borderColor : 0xFFFFFF});					tfTEXT.setTextFormat(new TextFormat('Verdana',10,0xFFFFFF));					tfTEXT.width = w - 20;								//					var 	oPOPUP:Sprite = new Sprite();												oPOPUP.addChild(mcBACK);						oPOPUP.addChild(mcHEAD);						oPOPUP.addChild(tfTITLE);						oPOPUP.addChild(tfTEXT);						oPOPUP.addChild(gCROSS);												mcBACK.height = tfTEXT.height + 45;								if(container is Stage)					DisplayFuncs.align(oPOPUP, new Rectangle(0,0,(container as Stage).stageWidth,(container as Stage).stageHeight));				else					DisplayFuncs.align(oPOPUP, container.getBounds(container.parent));				BoxObject.accessorInit(	mcBLCK, {x:-(mcBLCK.width - oPOPUP.width)/2 , y : -(mcBLCK.height - oPOPUP.height)/2 , buttonMode : true});				oPOPUP.addChildAt(mcBLCK,0);				 				container.addChild(oPOPUP);							}						/**			* 			*			* @param 			* @return			*/			static protected function _close(e:MouseEvent) : void {				e.target.parent.parent.removeChild(e.target.parent);				(e.target as Sprite).removeEventListener(MouseEvent.CLICK,_close,false);											}					// -------o protected						/**			* 			*			* @param 			* @return			*/			protected function _onStaged(e : Event = null) : void {				trc('onStaged');				removeEventListener(Event.ADDED_TO_STAGE, _onStaged);				addEventListener(Event.REMOVED_FROM_STAGE, _onRemoved, false, 1, false);			}						/**			* 			*			* @param 			* @return			*/			protected function _onRemoved(e:Event = null) : void {				removeEventListener(Event.REMOVED_FROM_STAGE, _onRemoved);			}		// -------o misc			public static function trc(arguments:*) : void {				Logger.log(BoxContainer,arguments);			}	}}