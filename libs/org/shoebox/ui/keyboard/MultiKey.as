SSED	: Array = [];		protected var _aTOLISTEN	: Array;		protected var _oTARGET 	: InteractiveObject = null;				// -------o constructor			public function MultiKey(){							}					// -------o public						/**			* Get the target			* @return o : Target (INTERACTIVEOBJECT)			*/			public function get target() : InteractiveObject {				return _oTARGET;			}						/**			* Set the target from which the keys will be listened			* @paran o : Target (INTERACTIVEOBJECT)			* @return void			*/			public function set target(o : InteractiveObject) : void {				_oTARGET = o;			}						/**			* Set a listener for a key combinaison			* @paran aKEYS : Keys list (ARRAY)			* @return			*/			public function listen(aKEYS:Array):void{								if(target==null)						throw new ArgumentError('You must defined a valid target first');												_aTOLISTEN = aKEYS;								_run();			}							// -------o private						/**			* Run 			* @return void			*/			protected function _run():void{				trc('run');				target.addEventListener(KeyboardEvent.KEY_DOWN , 	_onKeyEvent , false , 10000000 , false);				target.addEventListener(KeyboardEvent.KEY_UP , 	_onKeyEvent , false , 10000000 , false);			}						/**			* Key Event listener			* @param e : KeyBoard Event (KEYBOARDEVENT)			* @return void			*/			protected function _onKeyEvent(e : KeyboardEvent) : void {								switch(e.type){										case KeyboardEvent.KEY_DOWN:												if(_aPRESSED.indexOf(e.keyCode)==-1)							_aPRESSED.push(e.keyCode);												_check( e );													break;											case KeyboardEvent.KEY_UP:												if(_aPRESSED.indexOf(e.keyCode)!==-1)							_aPRESSED.splice(_aPRESSED.indexOf(e.keyCode));												break;										}							}						/**			* Checking if all listened key are in the array			* @return void			*/			protected function _check( e : KeyboardEvent ):void{				//trc('checking');				var bDONE:Boolean = true;				for each(var id:int in _aTOLISTEN)					if(_aPRESSED.indexOf(id)==-1)							bDONE = false;										if(bDONE) {					e.stopPropagation();					e.stopImmediatePropagation();					e.preventDefault();					dispatchEvent(new Event(DONE,false,false));				}			}					// -------o misc			public static function trc(arguments:*) : void {				//Logger.log(MultiKey,arguments);			}													}}