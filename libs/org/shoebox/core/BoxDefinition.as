	import org.shoebox.collections.HashMap;	import org.shoebox.errors.Errors;	import org.shoebox.utils.DescribeTypeCache;	import org.shoebox.utils.logger.Logger;	/**	 * org.shoebox.core.BoxDefinition	* @author shoebox	*/	public class BoxDefinition {				static protected var _oCACHE		: HashMap = new HashMap(true);		static protected var _oCACHEDEF	: HashMap = new HashMap(true);				// -------o constructor					public function BoxDefinition() : void {				Errors.throwError(Errors.STATICCLASSERROR);			}		// -------o public						/**			* getDefinitionByNameCache function			* @public			* @param 			* @return			*/			static public function getDefinitionByNameCache( s : String ) : Class {				if(_oCACHEDEF.containsKey(s))					return _oCACHEDEF.getValue(s);				else{					var oVAL : Class = getDefinitionByName(s) as Class;					_oCACHEDEF.addItem( s , oVAL );					return oVAL;				}			}						/**			* isClassImplement			* @public			* @param 			* @return			*/			static public function isClassImplement( c : Class , i : Class ) : Boolean {											if(!_oCACHE.containsKey(c)){					var oRES : Boolean = (DescribeTypeCache.getDesc(c)..implementsInterface.(String(@type)==String(DescribeTypeCache.getDesc(i).@name)).length() > 0);					_oCACHE.addItem( c , oRES);					return oRES;				}else					return _oCACHE.getValue( c );										}			/**			* isImplement function			* @public				* @param c : Class to be tested			* @return	result (BOOLEAN)			*/			static public function isImplement(o:* , i:Class) : Boolean {				if(o is Class){					var oXML:XML  = DescribeTypeCache.getDesc(o) as XML;					return (oXML..implementsInterface.(String(@type)==String(DescribeTypeCache.getDesc(i).@name)).length() > 0);					}else					return o is i;							}					// -------o protected		// -------o misc			public static function trc(arguments:*) : void {				Logger.log(BoxDefinition,arguments);			}	}}