						/**			* get angle function			* @public			* @param 			* @return			*/			final public function get angle() : Number {				return Math.atan2( y , x );			}						/**			* set angle function			* @public			* @param 			* @return			*/			final public function set angle( n : Number ) : void {				x = Math.cos( n ) * length;				y = Math.sin( n ) * length;			}						/**			* set length function			* @public			* @param 			* @return			*/			final public function set length( n : Number ) : void {				var nANGLE : Number = angle;				x = Math.cos( nANGLE ) * n;				y = Math.sin( nANGLE ) * n;			}						/**			* truncate function			* @public			* @param 			* @return			*/			final public function truncate( n : Number ) : Vector3D {				length = Math.min( n , length );				return this;			}						/**			* divide function			* @public			* @param 			* @return			*/			final public function divide( n : Number ) : BoxVector3D {				return new BoxVector3D( x / n , y / n , z / n ); 			}						/**			* reset function			* @public			* @param 			* @return			*/			final public function reset() : void {				x = y = z = 0;			}						/**			* clone function			* @public			* @param 			* @return			*/			public function copy() : BoxVector3D {				return new BoxVector3D( x , y , z , w );			}					// -------o protected		// -------o misc			public static function trc(...args : *) : void {				Logger.log(BoxVector3D, args);			}	}}