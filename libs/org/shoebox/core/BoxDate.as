	/**	* Date operations class	* 	* org.shoebox.core.BoxDate	* @date:18 f√©vr. 09	* @author shoe[box]	*/	public class BoxDate{				public static const DDMMYYYY		:	String = 'DD|MM|YYYY';		public static const HOURMINUTESECONDES	:	String = 'hh|mm|ss';				// -------o constructor			/**			* contructor			* @return void			*/			public function BoxDate():void{				throw new IllegalOperationError(Errors.STATICCLASSERROR);			}		// -------o public						/**			* Get the number of days elapsped between two dates			* @param	d1 : Date object start			* @param	d2 : Date object end			* @return	day count (UINT)			*/			static public function getDaysCountBetween(d1:Date , d2:Date):uint{				return Math.round((d2.time - d1.time)/86400000);							}						/**			* 			* @param			* @return			*/			static public function getFormatDate(d:Date , sFormat:String , separator:String =''):String{							var sRES:String = '';								var a:Array = sFormat.split('|');								var s:String;				var c:String;				for each(s in a){										c = s.slice(0,1);										switch(c){												case 'D':							sRES+= separator+BoxMath.toDIGIT(d.getDate(),s.length);							break;												case 'M':							sRES+= separator+BoxMath.toDIGIT(d.getMonth()+1,s.length);							break;													case 'Y':							sRES+= separator+BoxMath.toDIGIT(d.getFullYear(),s.length);							break;												case 'h':							sRES+= separator+BoxMath.toDIGIT(d.getHours(),s.length);							break;												case 'm':							sRES+= separator+BoxMath.toDIGIT(d.getMinutes(),s.length);							break;												case 's':							sRES+= separator+BoxMath.toDIGIT(d.getSeconds(),s.length);							break;					}					}								return sRES.slice(1,sRES.length);			}											// -------o private		// -------o misc			public static function trc(arguments:*) : void {				Logger.log(BoxDate,arguments);			}	}}