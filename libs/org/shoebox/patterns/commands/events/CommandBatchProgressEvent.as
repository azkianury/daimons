E		:String = 'BATCH_COMPLETE';				protected var _oCURRENT		:AbstractCommand = null;		protected var _uPOSITION	:uint;		protected var _uLEN		:uint;				// -------o constructor					/**			* Constructor of the CommandBatchProgressEvent class			*			* @public			* @return	void			*/			public function CommandBatchProgressEvent( sTYPE : String , current : AbstractCommand , pos : uint , len : uint) : void {				super(sTYPE);				_oCURRENT = current;				_uPOSITION = pos;				_uLEN = len;			}		// -------o public						/**			* get actualCommand function			* @public			* @param 			* @return			*/			public function get actualCommand() : AbstractCommand {				return _oCURRENT;			}						/**			* get position function			* @public			* @param 			* @return			*/			public function get position() : uint {				return _uPOSITION;			}						/**			* get length function			* @public			* @param 			* @return			*/			public function get length() : uint {				return _uLEN;			}					// -------o protected		// -------o misc			public static function trc(...args : *) : void {				Logger.log(CommandBatchProgressEvent, args);			}	}}