flash.geom.Rectangle;		/**	 * org.shoebox.patterns.commands.samples.StageResize	* @author shoebox	*/	public class StageResize extends AbstractCommand implements ICommand , ICommandBatch , ISingleton{				public static var rect		: Rectangle = null;				protected var _vREGISTERED		: Vector.<IResizeable> = new Vector.<IResizeable>();		protected var _oSTAGE			: Stage;				protected static var __instance		:StageResize;				// -------o constructor					public function StageResize( oSTAGE : Stage = null ) : void {								if(__instance!==null)					Errors.throwError(new IllegalOperationError(Errors.SINGLETONERROR));								if( oSTAGE !== null )					_oSTAGE = oSTAGE;												}		// -------o public						/**			* set stage function			* @public			* @param 			* @return			*/			public function set stage( o : Stage ) : void {				_oSTAGE = o;			}									/**			* 			* @param			* @return			*/			static public function register(tgt:IResizeable):void{								if(!(tgt is IResizeable))					throw new IllegalOperationError('TARGET MUST IMPLEMENT THE iFrameable INTERFACE TO BE REGISTERED BY THE STAGEENTERFRAME COMMAND');								getInstance().__register(tgt);			}						/**			* 			*			* @param 			* @return			*/			static public function unRegister(target:IResizeable) : void {				getInstance().__unregister(target);			}					// -------o protected									/**			* 			* @param			* @return			*/			override final public function onExecute(e:Event = null):void{												if(_oSTAGE==null)					Errors.throwError(new Error('Stage reference is undefined'));								_oSTAGE.addEventListener(Event.RESIZE , _onResize ,	 false , 100000 , false);								rect = new Rectangle( 0, 0, _oSTAGE.stageWidth , _oSTAGE.stageHeight);								onComplete();							}			/**			* 			* @param			* @return			*/			override final public function onCancel(e:Event = null):void{								_oSTAGE.removeEventListener(Event.RESIZE, _onResize , true);							}						/**			* 			*			* @param 			* @return			*/
			protected function _onResize(e : Event) : void {
								rect = new Rectangle( 0, 0, _oSTAGE.stageWidth , _oSTAGE.stageHeight);								var o:IResizeable;				for each(o in _vREGISTERED)					o.onResize(e);								}						/**			* 			* @param			* @return			*/			protected function __register(o:IResizeable):void{				_vREGISTERED.push( o );						}						/**			* 			* @param			* @return			*/			protected function __unregister(o:IResizeable):void{				_vREGISTERED.slice( _vREGISTERED.indexOf( o ) , 1 );			}					// -------o misc			public static function trc(arguments:*) : void {				Logger.log(StageResize,arguments);			}						/**			* Return the singleton instance of the class			* @public			* @return instance of the class (StageResize)			*/
			static public function getInstance() : StageResize {
								if( !__instance )					__instance = new StageResize( );												return __instance;			}	}}