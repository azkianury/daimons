IService{				public static const DATAFORMAT_BITMAPDATA		: String ='DataFormat_BITMAPDATA';		public static const DATAFORMAT_LOADER			: String ='DataFormat_LOADER';				protected var _oMediaLoader			:Loader;		protected var _oLoaderContext		:LoaderContext;				// -------o constructor					public function MediaService( ns : Namespace = EventMode ) : void {				super( );			}		// -------o public						/**			* onExecute function			* @public			* @param 			* @return			*/			override public function onCall() : void {				_load();			}						/**			* onCancel function			* @public			* @param 			* @return			*/			override public function onRefresh() : void {						}						/**			* Setter of the <code>LoaderContext</code>			* 			* @public			* @param	o : Loader context value 	( LoaderContext ) 			* @return	void			*/			public function set context( o : LoaderContext ) : void {				_oLoaderContext = o;			}						/**			* Getter of the <code>LoaderContext</code>			* 			* @public			* @return	Loader context value		( LoaderContext )			*/			public function get context() : LoaderContext {				return _oLoaderContext;			}					// -------o protected						/**			* 			*			* @param 			* @return			*/			protected function _load() : void {								_oMediaLoader = new Loader();								var 	l : LoaderInfo = _oMediaLoader.contentLoaderInfo;					l.addEventListener(Event.COMPLETE , 			_onMedia , false , 1 , false);
					l.addEventListener(IOErrorEvent.IO_ERROR, 		_onError, false, 1, false);
					l.addEventListener(IOErrorEvent.DISK_ERROR, 		_onError, false, 1, false);
					l.addEventListener(IOErrorEvent.NETWORK_ERROR, 	_onError, false, 1, false);
					l.addEventListener(IOErrorEvent.VERIFY_ERROR, 	_onError, false, 1, false);					l.addEventListener(HTTPStatusEvent.HTTP_STATUS, 	_onStatus  , false , 1 , false);					l.addEventListener(ProgressEvent.PROGRESS , 		_onProgress , false , 10 , true);									if( _oLoaderContext )					_oMediaLoader.load( request , _oLoaderContext );				else						_oMediaLoader.load( request );			}						/**			* 			* @param			* @return			*/			protected function _onMedia( e : Event):void{								var 	l : LoaderInfo = _oMediaLoader.contentLoaderInfo;					l.removeEventListener( Event.COMPLETE , 					_onMedia , false );					l.removeEventListener( IOErrorEvent.IO_ERROR , 			_onError , false );					l.removeEventListener( IOErrorEvent.DISK_ERROR , 			_onError , false );					l.removeEventListener( IOErrorEvent.NETWORK_ERROR , 		_onError , false );					l.removeEventListener( IOErrorEvent.VERIFY_ERROR , 		_onError , false );					l.removeEventListener( HTTPStatusEvent.HTTP_STATUS , 		_onStatus  , false );					l.removeEventListener( ProgressEvent.PROGRESS , 			_onProgress , false );								switch( l.contentType ){										case 'image/gif':					case 'image/jpeg':					case 'image/png':						dataFormat = DATAFORMAT_BITMAPDATA;						dispatch( {									datas : (_oMediaLoader.content as Bitmap).bitmapData , 									type : MediaService.DATAFORMAT_BITMAPDATA								} );						break;											default:						dataFormat = DATAFORMAT_LOADER;						dispatch( {									datas : _oMediaLoader , 									type : MediaService.DATAFORMAT_LOADER								} );						break;				}								onComplete();							}						/**			* 			* @param			* @return			*/			protected function _onProgress(e:ProgressEvent = null):void{				emit( ProgressEvent.PROGRESS , e );			}					// -------o misc			public static function trc(...args : *) : void {				//Logger.log(MediaService, args);			}	}}