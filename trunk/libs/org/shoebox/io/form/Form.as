	/**	* org.shoebox.io.form.Form	* @author shoebox	*/	public class Form extends EventDispatcher{				protected var _aFIELDS			:Array;		protected var _bAUTOTAB		:Boolean = true;				// -------o constructor					public function Form() : void {				trc('constructor');				_aFIELDS = [];			}		// -------o public						/**			* 			*			* @param 			* @return			*/			public function set autoTab(b:Boolean) : void {				_bAUTOTAB = b;			}			/**			* 			*			* @param 			* @return			*/			public function get autoTab() : Boolean {				return _bAUTOTAB;			}						/**			* 			*			* @param 			* @return			*/			public function addField(field:AField) : void {				field.addEventListener(FormEvent.ON_ERROR , _onFieldError,false,10,true);				_aFIELDS.push(field);								if(autoTab)					if(field is FormField)						(field as FormField).field.tabIndex = _aFIELDS.length - 1;			}						/**			* 			*			* @param 			* @return			*/			public function validate() : Boolean {								var bRES:Boolean = true;				var oField:*;				for each(oField in _aFIELDS){										if(!oField.validate())						bRES = false;				}								return bRES;			}						/**			* 			*			* @param 			* @return			*/			public function populate(o : URLVariables = null) : URLVariables {				(o == null) ? o = new URLVariables() : o = o;								var oField:*;				for each(oField in _aFIELDS)					o[oField.name] = oField.value;												return o;			}		// -------o protected						/**			* 			*			* @param 			* @return			*/			protected function _onFieldError(e:FormEvent = null) : void {				trc('onFieldError');				dispatchEvent(e);			}					// -------o misc			public static function trc(arguments:*) : void {				Logger.log(Form,arguments);			}	}}