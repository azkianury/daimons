sNAME:String , oINIT:Object = null) : void {								targetArray = aFIELDS;				name = sNAME;				var prop:String;				if(oINIT!==null)					for(prop in oINIT)						this[prop] = oINIT[prop];							}		// -------o public						/**			* 			*			* @param 			* @return			*/			public function set targetArray(a:Array) : void {				_aFields = a;			}						/**			* 			*			* @param 			* @return			*/			public function get fieldsArray() : Array {				return _aFields;			}						/**			* 			*			* @param 			* @return			*/			public function set separator(s:String) : void {				_sSEPARATOR = s;			}						/**			* 			*			* @param 			* @return			*/			public function get separator() : String {				return _sSEPARATOR;			}						/**			* 			*			* @param 			* @return			*/			public function validate() : Boolean {				trc('validate');								var bRES:Boolean = true;				var f:FormField;				for each(f in _aFields){										if(!f.hasEventListener(FormEvent.ON_ERROR))						f.addEventListener(FormEvent.ON_ERROR , _onSubFieldError,false,10,true);											if(!f.validate())						bRES = false;				}								if(bRES){										var func:Function;					for each(func in _aFORMULES){												if(!func(this)){														bRES = false;							dispatchEvent(new FormEvent(FormEvent.ON_ERROR,false,true,this,func));							break;						}					}										}								return bRES;			}						/**			* 			*			* @param 			* @return			*/			public function get value() : String {				var s:String = '';				var f:FormField;				for each(f in _aFields)					(s=='') ? s = f.value : s = s + separator + f.value; 										return s;			}		// -------o protected						/**			* 			*			* @param 			* @return			*/			protected function _onSubFieldError(e:FormEvent) : void {				trc('_onSubFieldError'+e.target);				dispatchEvent(e);			}					// -------o misc			public static function trc(arguments:*) : void {				Logger.log(FormFieldsGroup,arguments);			}	}}