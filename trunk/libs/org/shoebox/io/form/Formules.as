	import org.shoebox.utils.logger.Logger;
	
	import flash.display.MovieClip;
	import flash.errors.IllegalOperationError;	
	/**	* org.shoebox.io.form.Formules	* @author shoebox	*/	public class Formules extends MovieClip {				// -------o constructor					public function Formules() : void {				throw new IllegalOperationError(Errors.STATICCLASSERROR);			}		// -------o public						/**			* 			*			* @param 			* @return			*/			static public function isEMAIL(f:IField) : Boolean {				return _exec(/(\w|[_.\-])+@((\w|-)+\.)+\w{2,4}+/,f.value);			}						/**			* 			*			* @param 			* @return			*/			static public function isYYYYDDMM(f:IField) : Boolean {				return _exec(/^(19|20)\d\d[- \/.](0[1-9]|1[012])[- \/.](0[1-9]|[12][0-9]|3[01])$/,f.value);							}						/**			* 			*			* @param 			* @return			*/			static public function isDDMMYYYY(f:IField) : Boolean {				trc('isDDMMYYYY ::: '+f.value);				return _exec(/^(0[1-9]|[12][0-9]|3[01])[- \/.](0[1-9]|1[012])[- \/.](19|20)\d\d$/,f.value);							}						/**			* 			*			* @param 			* @return			*/			static public function isCHARSSizeOK(f:FormField) : Boolean {				var l:int = f.value.length;				return (l >= f.MINChars && l <= f.MAXChars);			}						/**			* 			*			* @param 			* @return			*/			static public function isROWLIMIT(f:FormField) : Boolean {				var l:int = f.field.numLines;				return (l >= f.MINRows && l <= f.MAXRows);			}					// -------o protected						/**			* 			*			* @param 			* @return			*/			static protected function _exec(p:RegExp , s:String) : Boolean{				var b:Boolean = false;				(p.exec(s)==null) ? b = false : b = true;				return b;			}					// -------o misc			public static function trc(arguments:*) : void {				Logger.log(Formules,arguments);			}	}}