ommand	*	* org.shoebox.apps.frakconsole.commands.ExecCommand	* @author shoebox	*/	public class ExecCommand extends AbstractCommand implements ICommand , ISingleton{				protected var _oCOMMAND			:* = null;		protected var _cCOMMAND			:Class;				protected static var __instance	:ExecCommand = null;				// -------o constructor						/**			* Setter for the command class name to be executed			* @private			* @param 	e : Singleton enforcer 			* 		( cheat to forced the constructor in to private mode )			* @return	void			*/			public function ExecCommand( e : SingletonEnforcer) : void {			}		// -------o public						/**			* Execution of the command class			* override of the generic method in the superclass			* @public			* @param 	e : Optional event (Event)			* @return	void			*/			final override public function onExecute( e : Event = null ) : void {								_bIsRunning = false;								// If the command is unknow					if(_oCOMMAND == null){						return;					}									// If the parameter is a string, we get the class definition					var oCLASS:Class;					if(_oCOMMAND is String){						try{							oCLASS = getDefinitionByName(_oCOMMAND) as Class;						}catch(e:Error){};					}else						oCLASS = _oCOMMAND;								// Testing if the class exist in the current application domain					if(oCLASS==null){						Logger.error( this , 'This class '+_oCOMMAND+' is unknow in the current ApplicationDomain');						return;					}								// Executing the command if she exist					(Factory.build(oCLASS) as AbstractCommand).execute();							}						/**			* When the command is canceled			* @public			* @param 	e : Optional event (Event)			* @return	void			*/			final override public function onCancel( e : Event = null ) : void {							}						/**			* Setter for the command class name to be executed			* @public			* @param 	s : Command name			* @return	void			*/			public function set command( c : * ) : void {				_oCOMMAND = c;			}						/**			* Return the singleton instance of the class 			* contained in the current applicationdomain			* 			* @public			* @return the singleton instance of the class (ExecCommand)			*/			static public function getInstance() : ExecCommand {				if(__instance == null)					__instance = new ExecCommand( new SingletonEnforcer() );									return __instance;			}					// -------o protected		// -------o misc			public static function trc(arguments:*) : void {				Logger.log(ExecCommand,arguments);			}	}}internal class SingletonEnforcer{}