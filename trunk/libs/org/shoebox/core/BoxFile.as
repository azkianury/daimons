package org.shoebox.core{	import org.shoebox.errors.Errors;	import org.shoebox.utils.logger.Logger;		/**	*	* org.shoebox.core.BoxFile	* @date:5 oct. 09	* @author shoe[box]	*/	public class BoxFile{				// -------o constructor					/**			* contructor			* @return void			*/			public function BoxFile():void{				Errors.throwError(Errors.STATICCLASSERROR);			}		// -------o public						/**			* getExtenstion function			* @public			* @param sFILENAME : File name or complete filepath			* @return void			*/			static public function getExtension(sFILENAME:String , bDOT:Boolean = false , bUPPERCASE:Boolean = true):String{												var l:int = sFILENAME.length;				var i:int = sFILENAME.lastIndexOf('.');				if(i==-1)					return '';								if(bUPPERCASE)					return sFILENAME.slice((!bDOT) ? i+1 : i , l).toUpperCase();				else					return sFILENAME.slice((!bDOT) ? i+1 : i , l);							}					// -------o private		// -------o misc			public static function trc(arguments:*) : void {				Logger.log(BoxFile,arguments);			}	}}