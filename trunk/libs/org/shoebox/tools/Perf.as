nst HEIGHT		:uint = 40;				protected var ver : Sprite;		protected var fps 		:int, timer : int, ms : int;		 		protected var _bGRAPH 		: BitmapData;		protected var _iPREVDELAY	: int = 0;		protected var mem 		: Number = 0;		protected var _oREC	 	: Rectangle;		protected var _tfMS 		: TextField;		protected var _tfMEM 		: TextField;		protected var _tfFPS 		: TextField;		protected var _oFORMAT 		: TextFormat;				// -------o constructor					/**			* Constructor of the Perf class			*			* @public			* @return	void			*/			public function Perf() : void {				addEventListener(Event.ADDED_TO_STAGE, _onStaged , false , 10 , true );			}		// -------o public				// -------o protected						/**			* 			*			* @param 			* @return			*/			final protected function _onStaged( e : Event ) : void {				removeEventListener(Event.ADDED_TO_STAGE, _onStaged);								graphics.beginFill( 0x2A2A2A );				graphics.drawRect( 0, 0, WIDTH, HEIGHT + 20 );				graphics.endFill();											_tfFPS = new TextField();				_tfMS = new TextField();				_tfMEM = new TextField();								_oFORMAT = new TextFormat( "_sans", 10 );								_tfFPS.defaultTextFormat = _tfMS.defaultTextFormat = _tfMEM.defaultTextFormat = _oFORMAT;				_tfFPS.width = _tfMS.width = _tfMEM.width = WIDTH;				_tfFPS.selectable = _tfMS.selectable = _tfMEM.selectable = false;												_tfFPS.textColor = 0xFFFF00;				_tfFPS.text = "FPS: ";				addChild(_tfFPS);								_tfMS.y = 15;				_tfMS.textColor = 0x00FF00;				_tfMS.text = "MS: ";				addChild(_tfMS);								_tfMEM.y = 30;				_tfMEM.textColor = 0x00FFFF;				_tfMEM.text = "MEM: ";				addChild(_tfMEM);								_bGRAPH = new BitmapData( WIDTH, 50, false, 0x2A2A2A );				var gBitmap:Bitmap = new Bitmap( _bGRAPH);				gBitmap.y = HEIGHT + 10;				addChild(gBitmap);								_oREC = new Rectangle( 0, 0, 1, _bGRAPH.height );								addEventListener(Event.ENTER_FRAME, _onUpdate , false , 10 , true );							}						/**			* 			*			* @param 			* @return			*/			final protected function _onUpdate( e : Event ) : void {				timer = getTimer();				fps++;								if( timer - 1000 > _iPREVDELAY )				{					_iPREVDELAY = timer;					mem = Number( ( System.privateMemory * 0.000000954 ).toFixed(3) );										var iFPS : int = Math.min( 50, 50 / stage.frameRate * fps );					var iMEM : Number =  Math.min( 50, Math.sqrt( Math.sqrt( mem * 5000 ) ) ) - 2;										_bGRAPH.scroll( 1, 0 );										_bGRAPH.fillRect( _oREC , 0x2A2A2A );					_bGRAPH.setPixel32( 0, _bGRAPH.height - iFPS, 0xFFFF00);					_bGRAPH.setPixel32( 0, _bGRAPH.height - ( ( timer - ms ) >> 1 ), 0x00FF00 );					_bGRAPH.setPixel32( 0, _bGRAPH.height - iMEM, 0x00FFFF);										_tfFPS.text = "FPS: " + fps + " / " + stage.frameRate;					_tfMEM.text = "MEM: " + mem;										fps = 0;				}								_tfMS.text = "MS: " + (timer - ms);				ms = timer;							}							// -------o misc			public static function trc(...args : *) : void {				Logger.log(Perf, args);			}	}}