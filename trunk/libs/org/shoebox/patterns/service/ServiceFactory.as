	import org.shoebox.core.BoxDefinition;	import org.shoebox.utils.logger.Logger;	import flash.utils.Dictionary;	import flash.utils.getQualifiedClassName;	/**	 * org.shoebox.patterns.service.ServiceFactory	* @author shoebox	*/	public class ServiceFactory{				protected var _oDICO		:Dictionary = new Dictionary(true);				protected static var __instance		:ServiceFactory;				// -------o constructor					public function ServiceFactory( e : SingletonEnforcer ) : void {						}		// -------o public						/**			* Singleton function			* 			* @public			* @return the singleton instance of the class (ServiceFactory)			*/			static public function getInstance() : ServiceFactory {								if(!__instance)					__instance = new ServiceFactory(new SingletonEnforcer());								return __instance;			}						/**			* Get the service instance of the class 			* 			* @public			* @param	c : Service class who must implements of IService (IService) 			* @return	service instance (IService)			*/			static public function getService( c : Class ) : IService {							//						if(!BoxDefinition.isImplement( c , IService))						throw new Error('The class is not an valid serice (the class must implement the IService interface');													return getInstance()._getService(c);								}					// -------o protected						/**			* 			*			* @param 			* @return			*/			protected function _getService( o : * ) : IService {								var c : Class;				if(o is String)					c = getDefinitionByName(o as String) as Class;				else					c = o as Class;								var sNAME : String = getQualifiedClassName(c);								if(	_oDICO[sNAME]== null)					_oDICO[sNAME] = new c();									return _oDICO[sNAME];			}					// -------o misc			public static function trc(...args : *) : void {				Logger.log(ServiceFactory, args);			}	}}internal class SingletonEnforcer{	}