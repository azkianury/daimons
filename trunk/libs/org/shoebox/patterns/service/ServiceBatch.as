 var _uInc			: uint;		protected var _vQueue			: Vector.<AbstractService>;				// -------o constructor			public function ServiceBatch( ns : Namespace = EventMode ) : void {				_vQueue = new Vector.<AbstractService>();				_ns = ns;			}		// -------o public						/**			* addCommand function			* @public			* @param 			* @return void			*/			public function addService( c : Class , o : Object = null ):void{				_vQueue.push( Factory.build( c , o ) );			}						/**			* onExecute function			* @public			* @param 			* @return void			*/			public function onCall():void{				trc('onCall');				_uInc = 0;				_next();						}						/**			* onCancel function			* @public			* @param 			* @return void			*/			public function onRefresh():void{				//osef			}						/**			* onComplete function			* @public			* @param 			* @return			*/			final override public function onComplete() : void {				if ( _ns == SignalMode )					emit( Event.COMPLETE );				else					dispatchEvent( new Event( Event.COMPLETE , false , false) );								super.onComplete();			}										// -------o protected						/**			* 			*			* @param 			* @return			*/			protected function _next() : void {				trc('next ::: '+_vQueue.length);				//					if(_vQueue.length == 0){						onComplete();						return;					}								//					_oCurrent = _vQueue.shift();					if ( _ns == SignalMode )						_oCurrent.connect( _onSignalComplete , ServiceEvent.ON_DATAS , 10 , true );					else							_oCurrent.addEventListener( ServiceEvent.ON_DATAS, _onServiceComplete , false , 10 , false);						_oCurrent.call();								}						/**
			* 
			*
			* @param 
			* @return
			*/
			final protected function _onSignalComplete( datas : * ) : void {				emit( ProgressEvent.PROGRESS , datas );				_next();
			}						/**			* 			*			* @param 			* @return			*/			protected function _onServiceComplete( e : ServiceEvent ) : void {				trc('_onServiceComplete ::: '+e);				(e.target as AbstractService).removeEventListener(ServiceEvent.ON_DATAS , _onServiceComplete , false);				dispatchEvent(e);								_next();			}		// -------o misc			public static function trc(...args : *) : void {				// Logger.log(ServiceBatch, args);			}	}}