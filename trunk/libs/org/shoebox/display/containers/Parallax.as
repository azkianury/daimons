MP			:Rectangle;		protected var _rVIEW			:Rectangle;		protected var _oVIEW			:Bitmap;		protected var _oPOINT			:Point;		protected var _oMAP			:BitmapData;		protected var _spCONTAINER		:Sprite = new Sprite();		protected var _vLAYERS			:Vector.<ParallaxLayer>;		protected var _oLAYER			:ParallaxLayer;				// -------o constructor					/**			* Constructor of the Parallax class			*			* @public			* @return	void			*/			public function Parallax() : void {				_vLAYERS = new Vector.<ParallaxLayer>();				addChild( _spCONTAINER );			}		// -------o public						/**			* addLayer function			* @public			* @param 			* @return			*/			final public function addLayer( 										oDisplay 	: DisplayObject , 									dx 		: int , 									dy 		: int ,									repeat 	: Boolean = false ,									speed		: Number = 1								) : void {								trc('addLayer ::: '+oDisplay+' /// '+speed);								var 	b : BitmapData = new BitmapData( oDisplay.width  , oDisplay.height  , true, 0 ); 					b.draw( oDisplay );								addBitmapLayer( b , dx , dy , repeat , speed );			}						/**
			* addBitmapLayer function
			* @public
			* @param 
			* @return
			*/
			final public function addBitmapLayer( 											b 		: BitmapData , 											dx 		: int , 											dy 		: int ,											repeat 	: Boolean = false ,											speed		: Number = 1										) : void {									var	r : Rectangle = b.rect.clone();					r.x = dx;					r.y = dy;				 							var 	o : ParallaxLayer = Factory.build( ParallaxLayer , 	{															ptDecal 	 : new Point( dx , dy ),															nSpeed 	 : speed,															sourceBitmap : b,															bRepeat	 : repeat,															rWorld	 : r														} );				_vLAYERS.push( o );
			
			}						/**			* init function			* @public			* @param 			* @return			*/			final public function init() : void {				trc('init');								_oMAP = new BitmapData( rBOUNDS.width, rBOUNDS.height );				_oMAP.lock();				_rVIEW = new Rectangle( 0, 0, rBOUNDS.width, rBOUNDS.height );								_oVIEW = new Bitmap();				addChild( _oVIEW );			}			/**			* move function			* @public			* @param 			* @return			*/			final public function move( i : int = 1 ) : void {																_rVIEW.x += i;								_oMAP.unlock();				_oMAP.fillRect( _oMAP.rect , 0 );								for each( _oLAYER in _vLAYERS ) {										_oLAYER.rWorld.x += i * _oLAYER.nSpeed;										if( _oLAYER.rWorld.x > 0 )						_oLAYER.rWorld.x = 0;										if( _rVIEW.intersects( _oLAYER.rWorld) || _oLAYER.nSpeed == 0 ) {												_oPOINT = _oLAYER.rWorld.topLeft;						_rTMP = _oLAYER.sourceBitmap.rect;						_oMAP.copyPixels( _oLAYER.sourceBitmap, _rTMP ,  _oPOINT , null , null , true );											}				}								_oMAP.lock();				_oVIEW.bitmapData = _oMAP;			}							// -------o protected		// -------o misc			public static function trc(...args : *) : void {				Logger.log(Parallax, args);			}	}}import org.shoebox.utils.logger.Logger;import flash.display.BitmapData;import flash.geom.Point;import flash.geom.Rectangle;/** * org.shoebox.display.containers.Parallax	* @author shoebox	*/	internal class ParallaxLayer {				public var sourceBitmap			:BitmapData;		public var bRepeat				:Boolean;		public var nSpeed				:Number = 1;		public var ptDecal				:Point;		public var rWorld				:Rectangle;					// -------o constructor					/**			* Constructor of the Parallax class			*			* @public			* @return	void			*/			public function ParallaxLayer() : void {			}		// -------o public					// -------o protected		// -------o misc			public static function trc(...args : *) : void {				Logger.log(ParallaxLayer, args);			}	}