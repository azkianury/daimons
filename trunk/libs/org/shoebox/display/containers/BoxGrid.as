	protected var _oARRAY		:Array2D;		protected var _spPREVIEW	:Sprite;		protected var _mcCONTAINER	:MovieClip;		protected var _sALIGNMODE	:String;		protected var _uSPACERX		:uint = 5;		protected var _uSPACERY		:uint = 5;		protected var _uMINCELLW	:uint = 100;		protected var _uMINCELLH	:uint = 75;		protected var _uWIDTH		:uint;		protected var _uINNERMARGIN	:uint;		protected var _uHEIGHT		:uint;				// -------o constructor					public function BoxGrid( uW : uint = 1 , uH : uint = 1 , uINNER : uint = 10) : void {				trc('constructor');				_sALIGNMODE = StageAlign.TOP;				_uINNERMARGIN = uINNER;				_uWIDTH = uW;				_uHEIGHT = uH;				_oARRAY = new Array2D(uW , uH);				_spPREVIEW = new Sprite();				_mcCONTAINER = new MovieClip();			}		// -------o public					/**			* getCellAt function			* @public			* @param 			* @return			*/			public function getCellAt(x : uint , y : uint) : BoxGridCell {				return _oARRAY.getDatasAt( x , y );			}			/**			* preview function			* @public			* @param 			* @return			*/			public function preview() : void {				trc('preview');								var oITEM:BoxGridCell;				for each(oITEM in _oARRAY)					oITEM.preview();			}						/**			* onResize function			* @public			* @param 			* @return			*/			public function onStaged(e:Event = null) : void {				_mcCONTAINER.addChild(_spPREVIEW);				addChild(_mcCONTAINER);										_draw();				}									/**			* onRemoved function			* @public			* @param 			* @return			*/			public function onRemoved(e:Event = null) : void {												}									/**			* invalidate function			* @public			* @param 			* @return			*/			public function invalidate() : void {				trc('invalidate');												var w : int = _uWIDTH - 1;				var h : int = _uHEIGHT - 1;								var x: int = -1;				var y: int = -1;								var uMAXW : uint = 0;				var uMAXH : uint = 0;								var aTMP:Vector.<*>;				var o:BoxGridCell;				var aITEMW : Array = [];				var aITEMH : Array = [];				while(x++ < w){					uMAXW = 0;					aTMP = _oARRAY.getItemsAtX(x);					for each( o in aTMP)						uMAXW = Math.max( uMAXW , o.width);					aITEMW.push( uMAXW);				}								while(y++ < h){					aTMP = _oARRAY.getItemsAtY(y);					uMAXH = 0;					for each( o in aTMP)						uMAXH = Math.max( uMAXH , o.height);					aITEMH.push( uMAXH);				}								x = -1;				y = -1;								var iINCX	: uint = _uINNERMARGIN;				var iINCY	: uint = _uINNERMARGIN;								while( x++ < w ){										y = -1;					iINCY = 0;										while( y++ < h ){												o = _oARRAY.getDatasAt( x , y ) as BoxGridCell;						o.x = iINCX; 						o.y = iINCY; 						iINCY += aITEMH[y] + _uINNERMARGIN;						o.align(_sALIGNMODE ,  aITEMW[x] ,  aITEMW[y]);					}										iINCX += aITEMW[x] + _uINNERMARGIN;										}												}						// -------o protected					/**			* 			*			* @param 			* @return			*/			protected function _draw() : void {				trc('draw');								var x : int = -1;				var y : int = -1;				var w : int = _uWIDTH - 1;				var h : int = _uHEIGHT - 1;				var c : BoxGridCell;				while( x++ < w ) {										y = -1;										while( y++ < h) {						c = Factory.build(BoxGridCell , {												minWidth : 20 , 												minHeight : 20,												name:x+' /// '+y												});						addChild(c);						_oARRAY.setDatasAt(x, y, c);						}									}			}		// -------o misc			public static function trc(arguments:*) : void {				Logger.log(BoxGrid,arguments);			}	}}