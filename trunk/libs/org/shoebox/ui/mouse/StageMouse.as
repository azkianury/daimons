OWN		: Boolean = false;		protected var _oREF			: DisplayObject;						// -------o constructor					/**			* Constructor of the AScript command class			*			* @public			* @return	void			*/			public function StageMouse( e : SingletonEnforcer ) : void {			}		// -------o public						/**			* set ref function			* @public			* @param 			* @return			*/			final public function set ref( o : DisplayObject ) : void {				_oREF = o;			}						/**			* get ref function			* @public			* @param 			* @return			*/			final public function get ref() : DisplayObject {				return _oREF;			}						/**			* Execution of the command			* 			* @public			* @param	e : optional event (Event) 			* @return	void			*/
			override public function onExecute(e : Event = null) : void {
				_oREF.addEventListener(MouseEvent.MOUSE_DOWN , _onMouse , false , 10 , true );			}						/**			* When the command is canceled			* 			* @public			* @param	e : optional event (Event)	 			* @return	void			*/			override public function onCancel( e : Event = null ) : void {				_oREF.removeEventListener(MouseEvent.MOUSE_DOWN , 	_onMouse , false );				_oREF.removeEventListener(MouseEvent.MOUSE_UP , 	_onMouse , false );			}					// -------o protected						/**			* 			*			* @param 			* @return			*/			final protected function _onMouse( e : MouseEvent ) : void {								switch( e.type ){					
					case MouseEvent.MOUSE_DOWN:						MOUSE_DOWN = true;
						_oREF.addEventListener(MouseEvent.MOUSE_UP, _onMouse, false , 10 , true );						break;						
					case MouseEvent.MOUSE_UP:						MOUSE_DOWN = false;						_oREF.removeEventListener(MouseEvent.MOUSE_UP, _onMouse, false );						break;										}							}					// -------o misc			public static function trc(...args : *) : void {				Logger.log(StageMouse, args);			}						/**			* Return the singleton instance of the class			* @public			* @return instance of the class (StageMouse)			*/			static public function getInstance() : StageMouse {								if( !__instance )					__instance = new StageMouse( new SingletonEnforcer() );												return __instance;			}						protected static var __instance			 : StageMouse = null;	}}internal class SingletonEnforcer{	}